@using Microsoft.AspNetCore.Identity
@inject SignInManager<Movie_Recommendation.Models.ApplicationUser> SignInManager
@inject UserManager<Movie_Recommendation.Models.ApplicationUser> UserManager
@{
    var user = await UserManager.GetUserAsync(User);

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Movie_Recommendation</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <link href="~/vendor/bootstrap-5.3.0-alpha1-dist/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/vendor/fontawesome-free-6.1.1-web/css/all.min.css" rel="stylesheet" type="text/css" />
    <link href="~/vendor/select2@4.1.0-rc.0/select2.min.css" rel="stylesheet" />
    <link href="~/vendor/lightbox/lightbox.min.css" rel="stylesheet">
    <link href="~/vendor/swiper/swiper.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="~/plugins/toastr/toastr.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://cdn.datatables.net/1.12.1/css/dataTables.bootstrap5.min.css" rel="stylesheet" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.7/chosen.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/customStepper.css" asp-append-version="true" />
    <link href="~/assets/css/style.css" rel="stylesheet" type="text/css" asp-append-version="true" />
    <link href="~/lib/google-fonts/material-icons.css" rel="stylesheet" type="text/css" asp-append-version="true">
    <link href="~/lib/node-waves/waves.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/Chat.css" rel="stylesheet" asp-append-version="true" />
    <!--Chart-->
    <link href="~/lib/morrisjs/morris.css" rel="stylesheet" />
    <link href="~/css/themes/all-themes.css" rel="stylesheet" />
    <link href="~/assets/css/custom-style.css" rel="stylesheet" type="text/css" asp-append-version="true" />
    <link href="~/assets/css/coordinator-style.css" rel="stylesheet" type="text/css" asp-append-version="true" />
    <link href="~/assets/css/style.css" rel="stylesheet" type="text/css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Movie_Recommendation System</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Register">Sign up</a>
                        </li>
                        @if (user != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Register">Logout</a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    @if (user != null)
    {
        <div class="main-wrapper">
            <aside class="sidebar offcanvas-md offcanvas-start" tabindex="-1" id="offcanvasResponsive" aria-labelledby="offcanvasResponsiveLabel">
                <div class="sidebar-wrapper rounded-20 position-relative bg-white d-flex">
                    <div class="sidebar-icons bg-primary d-flex flex-column flex-shrink-0">
                        <ul class="nav nav-pills nav-flush flex-column mb-auto text-center" id="sidebarMenu">

                            <!-- Dashboard -->
                            <li class="nav-item">
                                <a href="/Home/Dashboard" class="nav-link text-white py-3 border-bottom rounded-0">
                                    <i class="bi bi-speedometer2"></i>
                                    <span class="d-none d-md-inline ms-2">Dashboard</span>
                                </a>
                            </li>

                            <!-- Movies -->
                            <li class="nav-item">
                                <a href="/Movies/Index" class="nav-link text-white py-3 border-bottom rounded-0">
                                    <i class="bi bi-film"></i>
                                    <span class="d-none d-md-inline ms-2">Movies</span>
                                </a>
                            </li>

                        </ul>
                    </div>
                </div>
            </aside>
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    }


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Movie_Recommendation - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="~/assets/js/jquery-3.2.1.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="~/vendor/bootstrap-5.3.0-alpha1-dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/vendor/select2@4.1.0-rc.0/select2.min.js"></script>
    <script src="~/vendor/lightbox/lightbox-plus-jquery.min.js"></script>
    <script src="~/vendor/swiper/swiper.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.7/chosen.jquery.min.js"></script>
    <script src="~/plugins/toastr/toastr.min.js" asp-append-version="true"></script>
    <script src="~/assets/js/script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/vendor/select2@4.1.0-rc.0/select2.min.js"></script>
    <link href="~/vendor/select2@4.1.0-rc.0/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js" asp-append-version="true"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/dataTables.bootstrap5.min.js" asp-append-version="true"></script>

    <script src="~/assets/js/printThis.js"></script>
    <!-- Morris Plugin Js -->
    <script src="/lib/raphael/raphael.min.js"></script>
    <script src="/lib/morrisjs/morris.js"></script>
    <script src="~/js/customtepper.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
    <!-- Sparkline Chart Plugin Js -->
    <script src="/lib/jquery-sparkline/jquery.sparkline.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    </script>
    <script>
        $(document).ready(function () {
            $('.display').DataTable();
        });
    </script>
    <script>
        $(document).ready(function () {
            var message = '@TempData["Message"]';
            var title = '@TempData["Title"]';
            var type = '@TempData["Type"]';
            if (message.length > 0) {
                toastr.options = {
                    "closeButton": true,
                    "progressBar": true
                };
                if (type === 'Success')
                    toastr.success(message, title);
                else if (type === 'Error')
                    toastr.error(message, title);
                else
                    toastr.warning(message, title);
            }
        });
    </script>
    <partial name="_NotificationsPartial" />
    @RenderSection("Scripts", required: false)
</body>
</html>
